@{
    ViewData["Title"] = "Welcome to Recipe Manager";
}

<div class="text-center mt-5">
    <h1 class="display-4">Welcome to Recipe Manager 🍽️</h1>
    <p class="lead">Manage your categories, recipes, and ingredients easily with this ASP.NET Core MVC app.</p>
    
    <hr class="my-4" />

    <div class="row justify-content-center">
        <div class="col-md-3">
            <a class="btn btn-outline-primary btn-lg w-100 mb-2" asp-controller="Recipes" asp-action="Index">📋 Recipes</a>
        </div>
        <div class="col-md-3">
            <a class="btn btn-outline-success btn-lg w-100 mb-2" asp-controller="Categories" asp-action="Index">📁 Categories</a>
        </div>
        <div class="col-md-3">
            <a class="btn btn-outline-warning btn-lg w-100 mb-2" asp-controller="Ingredients" asp-action="Index">🥣 Ingredients</a>
        </div>
        <div class="col-md-3">
            <a class="btn btn-outline-info btn-lg w-100" asp-controller="Statistics" asp-action="Index">📊 Statistics</a>
        </div>
    </div>
</div>
